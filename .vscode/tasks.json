{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Solve",
			"type": "process",
			"command": "go",
			"args": [
				"run",
				"${workspaceFolder}/solutions/day${input:day}"
			],
			"options": {
				"cwd": "${workspaceFolder}/solutions/day${input:day}"
			},
			"icon": {
				"id": "light-bulb",
				"color": "terminal.ansiGreen"
			},
			"problemMatcher": "$go",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated"
			}
		},
		{
			"label": "Test coverage file",
			"hide": true,
			"type": "process",
			"command": "go",
			"args": [
				"test",
				"-coverprofile=cov.out",
				"-tags=test",
				"./..."
			],
			"problemMatcher": "$go",
		},
		{
			"label": "Test coverage report",
			"type": "process",
			"command": "go",
			"args": [
				"tool",
				"cover",
				"-html=cov.out"
			],
			"dependsOn": [
				"Test coverage file"
			],
			"problemMatcher": "$go",
		}
	],
	"inputs": [
		{
			"id": "day",
			"type": "promptString",
			"default": "1",
			"description": "Day as number"
		}
	]
}
